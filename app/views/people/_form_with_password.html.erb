<% logger.debug("views/people/_form_with_password: @title: #{@title}, @person: #{@person.inspect}") %>
<%= form_for_jqm(@person) do |f| %>

  <%= render partial: 'shared/error_messages', object: f.object %>

  <%= f.text_field :name, placeholder: :name, required: true %>
  <%= f.email_field :email, placeholder: :email, required: true %>
  <%= f.text_area :description, placeholder: :description %>

  <%= f.password_field :password, placeholder: :password, required: true %>
  <%= f.password_field :password_confirmation, placeholder: :password_confirmation, required: true %>

  <% if @person.new_record? %>
    <%= f.submit 'Create Person' %>
  <% else %>
    <%= f.submit 'Update Person' %>
  <% end %>

<% end %>
