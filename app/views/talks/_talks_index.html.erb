<% if @talks %>
  <ul data-role="listview">
      <% @talks.each do |talk| %>
        <li>
        <% logger.debug("views/talks/index: talk: #{talk.inspect}") %>
        <%= link_to talk.summary, edit_person_talk_path(talk.person_id, talk.id) %>
        </li>
      <% end %>
  </ul>
<% else %>
  <p>The world awaits your proposals for conversation!</p>
<% end %>
