<% if @talks %>
  <% # TBD:  integrate jquery_mobile_paginate_link_renderer.rb, then bracket the loop with 'will_paginate' %>
  <ul data-role="listview">
      <% @talks.each do |talk| %>
        <li>
        <% logger.debug("views/talks/index: talk: #{talk.inspect}") %>
        <%= link_to talk.summary, edit_person_talk_path(talk.person_id, talk.id) %>
        </li>
      <% end %>
  </ul>
<% else %>
  <p>No talks found.</p>
<% end %>
