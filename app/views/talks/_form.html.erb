<%= form_for_jqm(@talk) do |f| %>

  <%= render partial: 'shared/error_messages', object: f.object %>

  <%= f.text_field :summary, placeholder: :summary, required: true %>

  <%= f.text_field :when_desc, placeholder: :when %>

  <%= f.text_field :where_desc, placeholder: :where %>

  <%= f.text_area :description, placeholder: 'Why? Details if you would' %>

  <%= f.text_field :talk_status %>

  <%= f.datetime_select :posted_dt %>

  <%= f.submit %>

  <%= render partial: 'shared/delete_button', :object => f.object %>

<% end %>
