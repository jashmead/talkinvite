<%= form_for_jqm [ @person, @talk ] do |f| %>

  <%= render partial: 'shared/error_messages', object: f.object %>

  <%= f.text_field :summary, placeholder: :summary, required: true %>

  <%= f.text_field :when_desc, placeholder: :when %>

  <%= f.text_field :where_desc, placeholder: :where %>

  <%= f.text_area :description, placeholder: 'Why? Details if you would' %>

  <%= f.text_field :talk_status %>

  <%= 
      if controller.action_name === 'new'
        link_to 'Create Talk', new_person_talk_path, 'data-role' => 'button', 'data-inline' => true
      else
        link_to 'Edit Talk', edit_person_talk_path, 'data-role' => 'button', 'data-inline' => true
        link_to 'Delete Talk', person_talk_path, :method => 'delete', 'data-role' => 'button', 'data-inline' => true
      end
  %>


<% end %>

