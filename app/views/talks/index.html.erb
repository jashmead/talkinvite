<% provide(:title, 'List of Talks') %>
<% logger.debug("views/talks/index: @person: #{@person}, @talks: #{@talks.inspect}") %>
<% if @talks %>
  <ul data-role="listview">
      <% @talks.each do |talk| %>
        <li>
        <% logger.debug("views/talks/index: talk: #{talk.inspect}") %>
        <%= link_to talk.summary, edit_person_talk_path(@person, talk) %>
        </li>
      <% end %>
  </ul>
<% else %>
  <p>The world awaits your proposals for conversation!</p>
<% end %>
<%= link_to 'New Talk', new_person_talk_path(@person) %>
