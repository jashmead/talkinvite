<!-- cloned from talks/search -->
<!--
  format is:
    search box, search button, advanced search arrow (linking to advanced search)
    lots of talk search options, see the stories_spec.rb file for list
-->
<% provide(:heading, 'Got Talk?') %>
<% provide(:title, 'Start page for TalkInvite') %>
<h1><%= yield :heading %></h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_tag("/talks/found", method: "get") do %>
      <%= label_tag(:search_q, "Search for:") %>
      <%= search_field(:search, :q) %>
      <!-- get submit_tag to pull right -->
      <%= submit_tag("Search") %>
    <% end %>

  </div>
<%
  static_links = {
    'Recent' => recent_path,
    'Nearby' => nearby_path
  }
  if current_person 
    static_links.merge!( {
      'My Talks' => my_talks_path
    })
  end
  static_links.merge!( {
    'Start Talk' => new_talk_path
  })
%>
  <div class="span6 offset3">
  <% static_links.each do |name, path| %>
    <%= link_to name, path %>
    <br/>
  <% end %>
  </div>
</div>
