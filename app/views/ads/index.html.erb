    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.name %></td>
        <td><%= ad.description %></td>
        <td><%= ad.internal_flag %></td>
        <td><%= ad.content %></td>
        <td><%= ad.source %></td>
        <td><%= ad.strategy %></td>
        <td><%= ad.stats %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

