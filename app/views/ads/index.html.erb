<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Internal flag</th>
      <th>Content</th>
      <th>Source</th>
      <th>Strategy</th>
      <th>Stats</th>
      <th></th>
      <th></th>
