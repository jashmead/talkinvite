<% provide(:title, 'Services') %>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Service type</th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td>
          <%= link_to service.person_id, person_path(service.person_id) %>
        </td>
        <td>
          <%= link_to service.service_type, service_path(service) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= button_inline 'New Service', new_service_path %>
