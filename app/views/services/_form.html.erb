<%= form_for_jqm(@service) do |f| %>

  <%= render partial: 'shared/error_messages', object: f.object %>

  <%= f.number_field :person_id, placeholder: 'person #', required: true  %>
  <%= f.text_field :service_type, placeholder: :service_type, required: true %>
  <%= f.text_area :service_notes, placeholder: :service_notes %>

  <% if f.object.new_record? %>
    <%= f.submit 'Create Service' %>
  <% else %>
    <%= f.submit 'Update Service' %>
  <% end %>
  <%= render partial: 'shared/delete_button', :object => f.object %>

<% end %>
