<div data-role="header">
  <% if signed_in? %>
    <a data-icon="home" href="<%=root_path%>">Home</a>
    <h1><%=yield :title%></h1>
    <a data-icon="gear" href="<%=settings_path%>">Settings</a>
  <% else %>
    <a href="<%=signin_path%>"><i class="fa fa-sign-in">&nbsp;&nbsp;</i>Log In</a>
    <h1><%=yield :title%></h1>
    <a href="<%=signup_path%>"><i class="fa fa-rocket fa-spin"></i>&nbsp;&nbsp;&nbsp;Sign Up</a>
  <% end %>
</div>
