<div class="header" data-role="header" <%=data_theme%> >
  <% if person_signed_in? %>
    <% if @data_role == 'page' %>
      <h1><%=@title%></h1>
      <%= settings_link %>
    <% else %>
      <h1><%=@title%></h1>
    <% end %>
  <% else %>
    <% if @data_role == 'page' %>
      <%= sign_in_link %>
      <h1><%=@title%></h1>
      <%= sign_up_link %>
    <% else %>
      <h1><%=@title%></h1>
    <% end %>
  <% end %>
</div>
