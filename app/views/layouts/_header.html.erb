<!-- TBD: flip swatches for dialogs? no point when using the Bootstrap color scheme -->
<div data-role="header" <%=swatch%> >
  <% if signed_in? %>
    <% if @data_role == 'page' %>
      <h1><%=@title%></h1>
      <%= signout_link %>
    <% else %>
      <h1><%=@title%></h1>
    <% end %>
  <% else %>
    <% if @data_role == 'page' %>
      <%= signin_link %>
      <h1><%=@title%></h1>
      <%= signup_link %>
    <% else %>
      <h1><%=@title%></h1>
    <% end %>
  <% end %>
</div>
