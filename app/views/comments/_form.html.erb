<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> kept this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- TBD:  replace person with name, talk with name -->
  <div class="field">
    <%= f.number_field :person_id, placeholder: :person_id %>
  </div>
  <div class="field">
    <%= f.number_field :talk_id, placeholder: :talk_id %>
  </div>
  <div class="field">
    <%= f.text_area :comment_text, placeholder: :comment_text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
