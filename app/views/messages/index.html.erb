<% content_for(:title, 'Messages') %>
<% if @messages && @messages.size > 0 %>
	<ul 'data-role'="listview">
	    <% @messages.each do |message| %>
        <li>
        <%= link_to message.message_text, edit_message_path(message) %>
        </li>
	    <% end %>
	</ul>
<% else %>
<p>We are talking to  no one today!</p>
<% end %>
<hr>
<%= new_button 'New Message', new_message_path %>
