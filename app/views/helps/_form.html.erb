<%= form_for_jqm(@help) do |f| %>

  <%= render partial: 'shared/error_messages', object: f.object %>

  <%= f.text_area :name, placeholder: :name, required: true %>

  <%= f.text_area :description, placeholder: :description, required: true %>

  <% if controller.action_name == 'new' %>
  <%= f.submit 'Create Help' %>
  <% else %>
  <%= f.submit 'Update Help' %>
  <% end %>

  <%= render partial: 'shared/delete_button', :object => f.object %>

<% end %>

