<% if object.errors.any? %>
  logger.debug("shared/_error_messages: object: #{object.inspect}")
  <div id="error_explanation">
    <div class="alert alert-error">
      <h2><%= pluralize(object.errors.count, "error") %> kept this <%object.class.to_s.downcase%> from being saved/deleted.</h2>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
