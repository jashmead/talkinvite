<%= form_for(@talk) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_field :summary, placeholder: "About..." %>
  </div>
  <div class="field">
    <%= f.text_area :description, placeholder: "Details..." %>
  </div>
  <%= f.submit "Start Talk", 'data-inline' => true  %>
<% end %>
