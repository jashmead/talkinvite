<% # logger.debug("views/shared/_error_messages: #{error_messages.inspect}") %>
<% if error_messages.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <h2><%= pluralize(error_messages.errors.count, "error") %> kept this <%error_messages.class.to_s.downcase%> from being saved/deleted.</h2>
    </div>
    <ul>
    <% error_messages.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
