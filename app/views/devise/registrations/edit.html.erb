<% provide(:title, resource.name.to_s.titlecase) %>
<% provide(:data_role, "dialog") %>
<% logger.debug("devise/registrations/edit: resource_name: #{resource_name.inspect}, resource: #{resource.inspect}") %>

<%= form_for_jqm(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.password_field :password, :autocomplete => "off" %>
  <i>(leave password blank if you don't want to change it)</i>

  <%= f.password_field :password_confirmation %>

  <%= f.password_field :current_password %>
  <i>(we need your current password to confirm your changes)</i>

  <%= f.submit "Update" %>
<% end %>

