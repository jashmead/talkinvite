<% provide(:title, 'Sign Up') %>
<% provide(:data_role, "dialog") %>

<%= form_for_jqm(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :name, placeholder: :name, required: true, autofocus: true, autocomplete: "off" %>
  <%= f.email_field :email, placeholder: :email, autocomplete: "off" %>
  <%= f.password_field :password, placeholder: :password, required: true, autocomplete: 'off' %>
  <%= f.password_field :password_confirmation, placeholder: :password_confirmation, required: true %>

  <%= f.submit "Sign Up" %>
<% end %>
