<% provide(:title, 'Sign Up') %>

<%= form_for_jqm(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :name, placeholder: :name, required: true, autofocus: true %>
  <%= f.email_field :email, placeholder: :email %>
  <%= f.password_field :password, placeholder: :password, required: true %>
  <%= f.password_field :password_confirmation, placeholder: :password_confirmation, required: true %>

  <%= f.submit "Sign up" %>
<% end %>
