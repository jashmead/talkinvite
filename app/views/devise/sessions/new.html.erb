<% provide(:title, "Sign In") %>
<% provide(:data_role, "dialog") %>
<% # TBD:  shrink width of "remember_me" %>

<% logger.debug("devise/sessions/new: resource: #{resource.inspect}") %>
<% logger.debug("devise/sessions/new: url: #{person_session_path(resource_name).inspect}") %>
<%= form_for_jqm(resource, :as => resource_name, :url => '/people/sign_in') do |f| %>
  <%= f.email_field :email, placeholder: 'your email',  :autofocus => true %>

  <%= f.password_field :password, placeholder: 'your password' %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, 'data-inline' => true %>
  <% end -%>

  <%= f.submit "Sign In" %>
  <%= button_inline "Create Account", sign_up_path %>
<% end %>
