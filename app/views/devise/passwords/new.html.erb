<% provide(:title, 'Forgot Your Password?') %>
<% provide(:data_role, "dialog") %>

<%= form_for_jqm(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, placeholder: 'your email' %>

  <%= f.submit "Send me reset password instructions" %>
<% end %>
