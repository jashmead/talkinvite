<% 
  # hand-built post submit button
  post = submit_button.object
  if post.new_record?
%>
  <%= submit_button.submit 'Create Post' %>
<% else %>
  <%= submit_button.submit 'Update Post' %>
  <%=
    link_to 'Delete', person_talk_post_url(post.person_id, post.talk_id, post.id), method: :delete, 
      data: { confirm: "Are you sure you want to delete this post?" },
      'data-inline' => true, 'data-role' => 'button'
  %>
<% end %>
