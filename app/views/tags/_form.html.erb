<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> kept this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :tag_type, placeholder: :tag_type %>
  </div>
  <div class="field">
    <%= f.text_field :tagable_type, placeholder: :tagable_type%>
  </div>
  <div class="field">
    <%= f.number_field :tagable_id, placeholder: :tagable_id%>
  </div>
  <div class="actions">
    <%= f.submit 'data-inline' => true %>
  </div>
<% end %>
