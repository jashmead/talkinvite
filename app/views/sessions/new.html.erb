<% provide(:title, "Sign In") %>
<% provide(:data_role, "dialog") %>

<!-- url is passed to form, as the 'action' -->
<!-- why no '@session'? -->
<%= form_for_jqm(:session, url: sessions_path) do |f| %>

  <!-- unable to get :placeholder to work with these or to null them out, 
    may be a problem in the browser (Firefox) -->
  <%= f.text_field :email, placeholder: 'your.email@your_email_provider', size: 60 %>

  <%= f.password_field :password, placeholder: :password, size: 20 %>

  <%= f.submit "Sign In", 'data-inline' => true %>
  <%= button_inline "Create Account", sign_up_path %>
<% end %>
