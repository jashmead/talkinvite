<!-- entry point for testing root/partials system -->
<% content_for(:title, 'Thanks!') %>
<% logger.debug("credits/index: @credits = #{@credits.inspect}") %>
<% if @credits && @credits.size > 0 %>
<ul>
    <% @credits.each do |credit| %>
      <% if admin? %>
        <li>
          <%= link_to credit.name, edit_credit_path(credit) %>
        </li>
      <% else %>
          <%= link_to credit.name, credit %>
      <% end %>
    <% end %>
</ul>
<% else %>
<p>We're thanking no one today!</p>
<% end %>

<br>

<% if admin? %>
<%= link_to 'New Credit', new_credit_path %>
<% end %>
